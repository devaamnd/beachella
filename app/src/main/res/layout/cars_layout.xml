<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/hotel_search_lyt_bg">


    <TextView
        android:id="@+id/lyt_car_rental_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/avenir_demi"
        android:maxWidth="180dp"
        android:text="Midsize SUV "
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lyt_car_rental_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/avenir_demi"
        android:text="Jeep Wrangler or Similar"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/dark_gray"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyt_car_rental_type" />

    <LinearLayout
        android:id="@+id/linearLayout47"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyt_car_rental_name">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:src="@drawable/person"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/lyt_car_rental_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/avenir_demi"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyt_hotel_search_r_name" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/linearLayout47"
        app:layout_constraintTop_toBottomOf="@+id/lyt_car_rental_name">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gearbox"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/lyt_car_rental_geartype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/avenir_demi"
            android:text="Manual"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout47">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:src="@drawable/clean"
            android:layout_gravity="center"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/lyt_hotel_search_r_ratingsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/avenir_demi"
            android:text="Unlimited mileage"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout49"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout48">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mileage"
            android:layout_gravity="center"
            app:tint="@color/colorPrimary" />

        <TextView
            android:id="@+id/lyt_hotel_search_r_ratingst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/avenir_demi"
            android:text="Enhanced cleaning"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lyt_hotel_search_r_ratings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/avenir_regular"
        android:text="Basic Collision Damage Protection"
        android:textColor="@color/green"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout49" />

    <TextView
        android:id="@+id/lyt_hotel_search_r_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/avenir_regular"
        android:text="Online Check-in"
        android:textColor="@color/green"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyt_hotel_search_r_ratings" />

    <ImageView
        android:id="@+id/lyt_car_rental_companyimage"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginVertical="15dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/crc1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyt_hotel_search_r_rating" />


    <ImageView
        android:id="@+id/lyt_car_rental_carimage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginVertical="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/car3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyt_hotel_search_r_rating">


        <TextView
            android:id="@+id/lyt_car_rental_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/avenir_demi"
            android:text="$65"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/avenir_demi"
        android:text="per day"
        android:textColor="@color/dark_gray"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout32" />

    <Button
        android:id="@+id/btn_Car_Book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/avenir_demi"
        android:paddingHorizontal="20dp"
        android:paddingVertical="5dp"
        android:text="Book Now"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:background="@drawable/button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />


</androidx.constraintlayout.widget.ConstraintLayout>