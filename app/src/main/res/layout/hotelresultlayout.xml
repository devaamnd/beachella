<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/hotel_search_lyt_bg">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="8dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/lyt_hotel_search_r_image"
                    android:layout_width="120dp"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/h11" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/lyt_hotel_search_r_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/avenir_demi"
            android:maxWidth="180dp"
            android:text="The Hive Hotel The Hive Hotel The Hive Hotel "
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/cardView5"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/lyt_hotel_search_r_starsimage"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fourstar"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/cardView5"
            app:layout_constraintTop_toBottomOf="@+id/lyt_hotel_search_r_name" />

        <LinearLayout
            android:id="@+id/linearLayout30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cardView5"
            app:layout_constraintTop_toBottomOf="@+id/lyt_hotel_search_r_starsimage">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal"
                    android:padding="1dp">

                        <TextView
                            android:id="@+id/lyt_hotel_search_r_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_demi"
                            android:text="4.5"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/avenir_demi"
                            android:text="/5"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/lyt_hotel_search_r_ratingstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/avenir_demi"
                    android:text="Excellent"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/cardView5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout30">

                <TextView
                    android:id="@+id/lyt_hotel_search_r_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/avenir_demi"
                    android:text="2.7 km"
                    android:textColor="@color/dark_gray"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:fontFamily="@font/avenir_demi"
                    android:text="from downtown"
                    android:textColor="@color/dark_gray"
                    android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/saletagnew"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout31">

                <TextView
                    android:id="@+id/lyt_hotel_search_r_discpercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/avenir_demi"
                    android:text="15%"
                    android:textColor="@color/white"
                    android:textSize="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/avenir_demi"
                    android:text="off"
                    android:textColor="@color/white"
                    android:textSize="8dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="10dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout33">

                <TextView
                    android:id="@+id/lyt_hotel_search_r_originalprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/avenir_demi"
                    android:text="$82"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/dark_gray"
                    android:textSize="12dp"

                    />

                <TextView
                    android:id="@+id/lyt_hotel_search_r_discountprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/avenir_demi"
                    android:text="$65"
                    android:textColor="@color/dark_gray"
                    android:textSize="16dp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/avenir_demi"
            android:text="Additional charges may apply"
            android:textColor="@color/dark_gray"
            android:textSize="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout32" />


</androidx.constraintlayout.widget.ConstraintLayout>